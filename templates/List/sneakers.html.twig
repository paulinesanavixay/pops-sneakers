{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .btn-primary-custom {
            background: linear-gradient(135deg, #ff4b2b, #ff416c);
            border: none;
            color: #fff;
            padding: 10px 20px;
            border-radius: 30px;
            font-size: 16px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .btn-primary-custom:hover {
            background: linear-gradient(135deg, #ff416c, #ff4b2b);
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        .btn-primary-custom:focus {
            outline: none;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.5);
        }

        .btn-primary-custom:active {
            transform: scale(0.98);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card {
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card img {
            width: 100%;
            height: 200px;
            object-fit: contain;
            object-position: center;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card-body {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card-title {
            margin-bottom: auto;
            text-align: center;
        }

        .card .btn {
            margin-top: 10px;
        }
    </style>

    <div class="container text-center mt-5">
        <h1>Our Selection {{ brand.name }}</h1>

        <div class="mt-3">
            <!-- Change Brand Button -->
            <a href="{{ path('brandList') }}" class="btn btn-primary-custom">
                Change Brand
            </a>
        </div>

        {% if sneakers is empty %}
            <p class="mt-4">No sneakers found for this brand.</p>
        {% else %}
            <div class="row justify-content-center mt-4">
                {% for sneaker in sneakers %}
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4 d-flex">
                        <div class="card">
                            <img src="{{ asset('images/sneakers/' ~ sneaker.image) }}" class="card-img-top" alt="{{ sneaker.name }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ sneaker.name }}</h5>
                                <a href="{{ path('sneaker_detail', {'id': sneaker.id}) }}" class="btn btn-primary-custom">
                                    More details
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}